{
  "storage": {
    "rules": "etc/storage.rules"
  },
  "firestore": {
    "rules": "etc/firestore.rules"
  },
  "functions": {
    "source": "dist/functions",
    "ignore": ["**/.runtimeconfig.json", "**/node_modules/**"]
  },
  "hosting": [
    {
      "site": "pn-wiki",
      "public": "dist",
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "ignore": [
        "dist/functions/**",
        "**/wiki.html",
        "**/types/**",
        "firebase.json",
        "**/.*",
        "**/node_modules/**",
        "etc/**"
      ]
    }
  ]
}
