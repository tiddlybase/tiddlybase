{
  "storage": {
    "rules": "etc/storage.rules"
  },
  "firestore": {
    "rules": "etc/firestore.rules"
  },
  "functions": {
    "source": "dist/functions",
    "ignore": ["**/.runtimeconfig.json", "**/node_modules/**"]
  },
  "hosting": [
    {
      "headers": [{
          "source": "**/*.@(json)",
          "headers": [{
              "key": "Access-Control-Allow-Origin",
              "value": "*"
          }]
      }],
      "site": "pn-wiki",
      "public": "dist",
      "rewrites": [
        {
          "source": "**",
          "destination": "/tiddlybase_public/index.html"
        }
      ],
      "ignore": [
        "dist/functions/**",
        "**/types/**",
        "firebase.json",
        "**/.*",
        "**/node_modules/**",
        "etc/**"
      ]
    }
  ]
}
