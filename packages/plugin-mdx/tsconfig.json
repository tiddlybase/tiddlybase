{
  "extends": "../../tsconfig.json",
  "include": ["src/**/*"],
  "types": ["node", "jest", "@testing-library/jest-dom"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "allowJs": true,
    "module": "commonjs",
    "target": "ES2020",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es2020", "dom.iterable"]
  },
  "ts-node": {
    "transpileOnly": true
  }
}
